
@model Anagrafica

@{
    ViewData["Title"] = "Add";
}

<div class="container">
<form asp-controller="Anagrafiche" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="@Model.Cognome" class="control-label"></label>
        <input asp-for="@Model.Cognome" class="form-control" type="text"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nome" class="control-label"></label>
        <input asp-for="@Model.Nome" class="form-control" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Indirizzo" class="control-label"></label>
        <input asp-for="@Model.Indirizzo" class="form-control" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Città" class="control-label"></label>
        <input asp-for="@Model.Città" class="form-control" type="text"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.CAP" class="control-label"></label>
        <input asp-for="@Model.CAP" class="form-control" type="number" maxlength="5" inputmode="numeric"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.CodFisc" class="control-label"></label>
        <input asp-for="@Model.CodFisc" class="form-control" type="text" maxlength="16"></>
    </div>
    <div class="form-group">
        <input type="submit" value="Aggiungi" class="btn btn-primary mt-2" />
    </div>
</form>
</div>