@model Verbale

@{
    ViewData["Title"] = "Add";
}

<div class="container">
    <form asp-controller="Verbali" asp-action="Add" method="post">
        <div class="form-group">
            <label asp-for="@Model.IdViolazione" class="control-label"></label>
            <input asp-for="@Model.IdViolazione" class="form-control" type="number" min="0"/>
        </div>
        <div class="form-group">
            <label asp-for="@Model.IdAnagrafica" class="control-label"></label>
            <input asp-for="@Model.IdAnagrafica" class="form-control" type="number" min="0"/>
        </div>
        <div class="form-group">
            <label asp-for="@Model.DataViolazione" class="control-label"></label>
            <input asp-for="@Model.DataViolazione" class="form-control" type="datetime" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.IndirizzoViolazione" class="control-label"></label>
            <input asp-for="@Model.IndirizzoViolazione" class="form-control" type="text"/>
        </div>
        <div class="form-group">
            <label asp-for="@Model.NominativoAgente" class="control-label"></label>
            <input asp-for="@Model.NominativoAgente" class="form-control" type="text"/>
        </div>
        <div class="form-group">
            <label asp-for="@Model.DataTrascrizioneVerbale" class="control-label"></label>
            <input asp-for="@Model.DataTrascrizioneVerbale" class="form-control" type="datetime"></>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Importo" class="control-label"></label>
            <input asp-for="@Model.Importo" class="form-control" type="number" step="0.1"></>
        </div>
        <div class="form-group">
            <label asp-for="@Model.DecurtamentoPunti" class="control-label"></label>
            <input asp-for="@Model.DecurtamentoPunti" class="form-control" type="number" maxlength="2" step="1"></>
        </div>
        <div class="form-group">
            <input type="submit" value="Aggiungi" class="btn btn-primary mt-2" />
        </div>
    </form>
</div>

