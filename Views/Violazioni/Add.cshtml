@model Violazione
@{
    ViewData["Title"] = "Add";
}

<div class="container">
    <form asp-controller="Violazioni" asp-action="Add" method="post">
        <div class="form-group">
            <label asp-for="@Model.Descrizione" class="control-label"></label>
            <input asp-for="@Model.Descrizione" class="form-control" type="text"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Aggiungi" class="btn btn-primary mt-2" />
        </div>
    </form>
</div>
